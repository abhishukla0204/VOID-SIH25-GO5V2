# FastAPI Backend Environment Configuration
# ==========================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
RELOAD=true
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration - Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# API Configuration
API_TITLE=Rockfall Detection API
API_DESCRIPTION=Advanced AI-powered rockfall detection and prediction system
API_VERSION=1.0.0

# File Paths (relative to backend directory)
MODELS_DIR=outputs/models
DATA_DIR=data
# STATIC_DIR removed for separate frontend deployment

# ML Model Settings
CONFIDENCE_THRESHOLD=0.5
BATCH_SIZE=32

# Security (for future use)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (for future use)
DATABASE_URL=sqlite:///./rockfall_detection.db

# External APIs (for future use)
WEATHER_API_KEY=your-weather-api-key
SEISMIC_API_KEY=your-seismic-api-key