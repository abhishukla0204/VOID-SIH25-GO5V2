# FastAPI Backend Environment Configuration Template
# ==================================================
# Copy this file to .env and update values as needed

# Server Configuration
PORT=8000
HOST=0.0.0.0
RELOAD=true

# CORS Configuration - Add your frontend domains
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,https://your-frontend.netlify.app,https://your-app.onrender.com

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_TITLE=Rockfall Detection API
API_DESCRIPTION=Advanced AI-powered rockfall detection and prediction system
API_VERSION=1.0.0

# File Paths (relative to backend directory)
MODELS_DIR=outputs/models
DATA_DIR=data
# STATIC_DIR removed for separate frontend deployment

# ML Model Settings
CONFIDENCE_THRESHOLD=0.5
BATCH_SIZE=32

# Security (Replace with actual values)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (Replace with actual database URL)
DATABASE_URL=sqlite:///./rockfall_detection.db

# External APIs (Replace with actual API keys)
WEATHER_API_KEY=your-weather-api-key
SEISMIC_API_KEY=your-seismic-api-key